{
    "extends": "scality",
    "plugins": ["jest"],
    "env": {
        "es6": true,
        "jest/globals": true
    },
    "parserOptions": {
        "ecmaVersion": 9
    },
    "rules": {
        "no-plusplus": 0,
        "no-underscore-dangle": 0,
        "no-restricted-syntax": 0,
        "max-len": 0,
        "import/no-extraneous-dependencies": 0,
        "no-continue": 0,
        "global-require": 0,
        "no-prototype-builtins": 0,
        "class-methods-use-this": 0,
        "no-unused-vars": 0,
        "no-lonely-if": 0,
        "max-classes-per-file": 0,
        "prefer-spread": 0,
        "no-constructor-return": 0
    }
}

